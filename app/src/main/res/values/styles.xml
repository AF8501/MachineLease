    <!--弹出对话框，诸如选择工期、选择最迟进场时间等的样式-->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

    <style name="SwithcButton">
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
        <item name="kswThumbDrawable">@drawable/ksw_md_thumb</item>
        <item name="kswBackDrawable">@drawable/ksw_md_swith_backgroud</item>
        <item name="kswThumbMarginTop">-3.3dp</item>
        <item name="kswThumbMarginBottom">-3.3dp</item>
        <item name="kswThumbMarginLeft">0dp</item>
        <item name="kswThumbMarginRight">0dp</item>
    </style>

    <!--确认支付对话框提示文字样式-->
    <style name="TextPostContractsDialog">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">13.3sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:lineSpacingExtra">13.3dp</item>
    </style>
    <!--确认支付对话框按钮文字样式-->
    <style name="ButtonPostContractsDialog">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">13.3sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!--弹出对话框，诸如选择工期、选择最迟进场时间等的样式-->
    <style name="PostContractsDialog" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>