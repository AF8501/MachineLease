<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="293.3dp"
    android:layout_height="180dp"
    android:background="@drawable/dialog_post_contracts">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="133.3dp">
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_post_contracts_dialog_enough"
             android:padding="14dp"
             android:text="发布XXX需求需要XXX保证金，保证金会在交易完后退还。"
            style="@style/TextPostContractsDialog"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46.7dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_post_contracts_dialog_unenough_cancel"
            android:background="@drawable/btn_dialog_post_contracts_cancel"
            android:text="稍后支付"
            style="@style/ButtonPostContractsDialog"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_post_contracts_dialog_unenough_wechat"
            android:background="#46c11b"
            android:text="微信支付"
            style="@style/ButtonPostContractsDialog"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_post_contracts_dialog_unenough_alipay"
            android:background="@drawable/btn_dialog_post_contracts_post"
            android:text="支付宝支付"
            style="@style/ButtonPostContractsDialog"/>
    </LinearLayout>
</LinearLayout>