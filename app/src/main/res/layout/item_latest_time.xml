<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="53.3dp"
    android:id="@+id/rl_item_latest_time">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tx_item_latest_time_name"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="最迟进厂时间"
            android:textColor="@color/machine_lease_listitem_name"
            android:textSize="@dimen/machine_lease_listitem" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_item_latest_time"
            android:src="@drawable/icon_listview_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tx_item_latest_time_content"
            android:layout_toLeftOf="@id/iv_item_latest_time"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:textColor="@color/machine_lease_listitem_content"
            android:textSize="@dimen/machine_lease_listitem"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#d9d9d9"
        android:layout_alignParentBottom="true">
    </LinearLayout>
</RelativeLayout>