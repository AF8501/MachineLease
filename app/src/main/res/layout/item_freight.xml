<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="53.3dp"
    android:id="@+id/rl_item_freight">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tx_item_freight_name"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="承担运费"
            android:textColor="@color/machine_lease_listitem_name"
            android:textSize="@dimen/machine_lease_listitem" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/et_item_freight_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:hint="请填写运费（元）"
                android:textColorHint="@color/machine_lease_listitem_content_hint"
                android:textColor="@color/machine_lease_listitem_content"
                android:textSize="@dimen/machine_lease_listitem"
                android:gravity="right"
                android:inputType="numberDecimal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tx_item_freight_unit"
                android:text="元"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/machine_lease_listitem"
                android:textColor="@color/machine_lease_listitem_content"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#d9d9d9"
        android:layout_alignParentBottom="true">
    </LinearLayout>
</RelativeLayout>